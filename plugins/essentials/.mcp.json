{
  "serena": {
    "command": "uvx",
    "args": [
      "--from",
      "git+https://github.com/oraios/serena",
      "serena",
      "start-mcp-server",
      "--context",
      "ide-assistant",
      "--project",
      "{{CWD}}"
    ],
    "description": "Semantic code retrieval and editing with LSP-powered symbol navigation"
  },
  "context7": {
    "command": "npx",
    "args": [
      "-y",
      "@upstash/context7-mcp"
    ],
    "description": "Up-to-date code documentation and examples from current sources"
  },
  "sequential-thinking": {
    "command": "npx",
    "args": [
      "-y",
      "@modelcontextprotocol/server-sequential-thinking"
    ],
    "description": "Structured, step-by-step problem-solving and reasoning"
  }
}
